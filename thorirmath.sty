\newcommand{\tf}{\thoriroperatorname{tf}}
\newcommand{\tfsum}{\thoriroperatorname{tf_\textmd{sum}}}
\newcommand{\tfmax}{\thoriroperatorname{tf_\textmd{max}}}
\newcommand{\tffrac}{\thoriroperatorname{tf_\textmd{frac}}} % tf/(tf+K)
\newcommand{\tfpoissona}{\thoriroperatorname{tf_\textmd{poissona}}}
	% a special tf_frac; K is set based on document stats only!
	% boost documents with distinct terms
	% i.e. penalise documents where avgtf(d) is high
	% avgtf(d) = dl / #terms
	% e.g.:
%(sailing, doc_1)
%(boats, doc_1)
%(sailing, doc_1) # second
%(greece, doc_1)
%(sailing, doc_1) # third
%(boats, doc_1)
	% 6 tuples, #terms=3, avgtf(d)=2
	% K = avgtf(d)
	% Compare to the usual setting based on collection-wide stats:
	% K = dl/avgdl
